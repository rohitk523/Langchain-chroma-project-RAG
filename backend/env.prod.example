# Environment variables for production
DEBUG=False
APP_NAME=RAG Chat API

# Clerk Authentication
CLERK_SECRET_KEY=your_production_clerk_secret_key
CLERK_PUBLISHABLE_KEY=your_production_clerk_publishable_key

# OpenAI API
OPENAI_API_KEY=your_production_openai_api_key

# OpenSearch settings (Production deployment)
OPENSEARCH_HOST=your-opensearch-host.com
OPENSEARCH_PORT=443
OPENSEARCH_USERNAME=admin
OPENSEARCH_PASSWORD=your_secure_opensearch_password
OPENSEARCH_USE_SSL=true
OPENSEARCH_VERIFY_CERTS=true
OPENSEARCH_DOCUMENTS_INDEX=rag_documents
OPENSEARCH_CHAT_INDEX=chat_history

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads

# CORS Settings
ALLOWED_ORIGINS=["https://your-frontend-domain.com", "https://*.railway.app"] 